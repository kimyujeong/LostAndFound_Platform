<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/border_rect"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ti_next" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="문의자 이름"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ti_next" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="휴대폰 번호"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ti_next" />

                <TextView
                    android:id="@+id/tv_object"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="분실물"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ask_object"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ti_next" />

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="상세 정보"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ask_object_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ti_next" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="분실 예상 장소"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lost_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ti_next" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="문의 날짜"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/registered_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="180dp"
                android:layout_height="42dp"
                android:background="@drawable/button_border"
                android:scaleType="fitXY"
                android:text="승인"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="180dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_border"
                android:scaleType="fitXY"
                android:text="취소"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/home"
        app:backgroundTint="#335741"
        app:elevation="4dp" />

</RelativeLayout>