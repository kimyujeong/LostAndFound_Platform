<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lbl_name</item>
        <item name="colorPrimaryDark">@color/lbl_name</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="windowTitleStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#f1a7b8</item>
        <item name="fontFamily">@font/customerfont</item>
    </style>

    <style name="buttonBarButtonStyle" parent="Widget.AppCompat.Button.Colored"/>

    <style name="buttonBarButtonStyle.Negative" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/customerfont</item>
        <item name="background">@drawable/border_round</item>
    </style>

    <style name="buttonBarButtonStyle.Positive" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#2C2C2C</item>
        <item name="fontFamily">@font/customerfont</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#f1a7b8</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#2C2C2C</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStyle.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyle.Negative</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>
    </style>

    <style name="_s_windowTitleStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#335741</item>
        <item name="fontFamily">@font/customerfont</item>
    </style>

    <style name="_s_buttonBarButtonStyle" parent="Widget.AppCompat.Button.Colored"/>

    <style name="_s_buttonBarButtonStyle.Negative" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#262626</item>
        <item name="fontFamily">@font/customerfont</item>
        <item name="background">@drawable/border_round</item>
    </style>

    <style name="_s_buttonBarButtonStyle.Positive" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/customerfont</item>
    </style>

    <style name="_s_MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#335741</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#181818</item>
        <item name="buttonBarPositiveButtonStyle">@style/_s_buttonBarButtonStyle.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/_s_buttonBarButtonStyle.Negative</item>
        <item name="android:windowTitleStyle">@style/_s_windowTitleStyle</item>
    </style>



</resources>